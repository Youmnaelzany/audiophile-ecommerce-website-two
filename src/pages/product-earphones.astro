---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
import Category from "../components/Category.astro";
import BestAudioGear from "../components/BestAudioGear.astro";
---

<Layout title="Frontend Mentor | Audiophile e-commerce website">
  <!-- Header -->
  <Header />
  <!-- XX99 Mark II Headphones -->
  <section
    class="flex justify-between items-center mx-[10.31rem] mt-[4.94rem] gap-[7.81rem] mb-[10rem]"
  >
    <!-- Product Image -->
    <div class="flex flex-col gap-[3.5rem]">
      <a
        href="/"
        class="inline-block opacity-50 text-[#000] text-[0.9375rem] font-normal leading-[1.5625rem]"
        >Go Back
      </a>
      <img
        src="/images/product-yx1-earphones/desktop/image-product.jpg"
        alt=""
        class="inline-block w-[33.75rem] h-[35rem] rounded-lg"
      />
    </div>
    <!-- Product Info -->
    <div class="flex flex-col gap-4">
      <h2
        class="text-[#D87D4A] text-sm font-normal leading-normal tracking-[0.625rem] uppercase"
      >
        NEW PRODUCT
      </h2>
      <h2
        class="w-[27.8125rem] text-[2.5rem] font-bold leading-[2.75rem] tracking-[0.08931rem] uppercase"
      >
        YX1 WIRELESS EARPHONES
      </h2>
      <p
        class="w-[27.8125rem] text-[0.9375rem] font-normal leading-[1.5625rem] text-[#000] opacity-50 mt-4"
      >
        Tailor your listening experience with bespoke dynamic drivers from the
        new YX1 Wireless Earphones. Enjoy incredible high-fidelity sound even in
        noisy environments with its active noise cancellation feature.
      </p>
      <h3
        class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem] uppercase mt-4"
      >
        $ 599
      </h3>
      <!-- Shop The Product -->
      <div class="flex items-center gap-4">
        <div
          class="bg-[#F1F1F1] w-[7.5rem] h-12 flex justify-center items-center gap-[1.31rem]"
        >
          <button type="button" class="minusBtn"> - </button>
          <button type="button" class="minusBtn"> 1 </button>
          <button type="button" class="PlusBtn"> + </button>
        </div>
        <button
          type="button"
          class="bg-[#D87D4A] w-40 h-12 text-[#fff] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase"
          >ADD TO CART</button
        >
      </div>
    </div>
  </section>
  <!-- Features & In The Box -->
  <section
    class="flex justify-between items-center gap-[7.81rem] mx-[10.31rem] mb-40"
  >
    <!-- FEATURES -->
    <div class="flex flex-col gap-8 w-[39.6875rem ]">
      <h2
        class="text-[#000] text-[2rem] leading-[2.25rem] tracking-[0.07144rem] uppercase"
      >
        FEATURES
      </h2>
      <p
        class="w-[39.6875rem] text-[#000] text-[0.9375rem] font-normal opacity-50"
      >
        Experience unrivalled stereo sound thanks to innovative acoustic
        technology. With improved ergonomics designed for full day wearing,
        these revolutionary earphones have been finely crafted to provide you
        with the perfect fit, delivering complete comfort all day long while
        enjoying exceptional noise isolation and truly immersive sound.
      </p>
      <p
        class="w-[39.6875rem] text-[#000] text-[0.9375rem] font-normal opacity-50"
      >
        The YX1 Wireless Earphones features customizable controls for volume,
        music, calls, and voice assistants built into both earbuds. The new
        7-hour battery life can be extended up to 28 hours with the charging
        case, giving you uninterrupted play time. Exquisite craftsmanship with a
        splash resistant design now available in an all new white and grey color
        scheme as well as the popular classic black.
      </p>
    </div>
    <!-- In The Box -->
    <div class="flex flex-col gap-8 w-[21.875rem] h-[14.0625rem]">
      <h2
        class="text-[#000] text-[2rem] font-bold leading-[2.5rem] tracking-[0.07144rem] uppercase"
      >
        in the box
      </h2>
      <div class="flex flex-col gap-4">
        <div class="flex gap-[1.5rem]">
          <h3
            class="text-[#D87D4A] font-bold text-[0.9375rem] leading-[1.5625rem]"
          >
            2x
          </h3>
          <h3
            class="text-[#000] opacity-50 font-normal text-[0.9375rem] leading-[1.5625rem]"
          >
            Earphone Unit
          </h3>
        </div>
        <div class="flex gap-[1.5rem]">
          <h3
            class="text-[#D87D4A] font-bold text-[0.9375rem] leading-[1.5625rem]"
          >
            6x
          </h3>
          <h3
            class="text-[#000] opacity-50 font-normal text-[0.9375rem] leading-[1.5625rem]"
          >
            Multi-size Earplugs
          </h3>
        </div>
        <div class="flex gap-[1.5rem]">
          <h3
            class="text-[#D87D4A] font-bold text-[0.9375rem] leading-[1.5625rem]"
          >
            1x
          </h3>
          <h3
            class="text-[#000] opacity-50 font-normal text-[0.9375rem] leading-[1.5625rem]"
          >
            User Manual
          </h3>
        </div>
        <div class="flex gap-[1.5rem]">
          <h3
            class="text-[#D87D4A] font-bold text-[0.9375rem] leading-[1.5625rem]"
          >
            1x
          </h3>
          <h3
            class="text-[#000] opacity-50 font-normal text-[0.9375rem] leading-[1.5625rem]"
          >
            USB-C Charging Cable
          </h3>
        </div>
        <div class="flex gap-[1.5rem]">
          <h3
            class="text-[#D87D4A] font-bold text-[0.9375rem] leading-[1.5625rem]"
          >
            1x
          </h3>
          <h3
            class="text-[#000] opacity-50 font-normal text-[0.9375rem] leading-[1.5625rem]"
          >
            Travel Pouch
          </h3>
        </div>
      </div>
    </div>
  </section>
  <!-- Product Images  -->
  <section class="mx-[10.31rem] mb-40 flex justify-between items-center gap-2">
    <!-- First Col -->
    <div class="flex flex-col gap-8">
      <!-- First Image / Gallery 1-->
      <div class="">
        <img
          src="/images/product-yx1-earphones/desktop/image-gallery-1.jpg"
          alt=""
          class="rounded-lg"
        />
      </div>
      <!-- Second Image / Gallery 2-->
      <div class="">
        <img
          src="/images/product-yx1-earphones/desktop/image-gallery-2.jpg"
          alt=""
          class="rounded-lg"
        />
      </div>
    </div>
    <!-- Second Col / Gallery 3-->
    <div class="">
      <img
        src="/images/product-yx1-earphones/desktop/image-gallery-3.jpg"
        alt=""
        class="rounded-lg"
      />
    </div>
  </section>
  <!-- You May Also Like -->
  <section
    class="mx-[10.31rem] mb-40 flex flex-col justify-center items-center gap-12"
  >
    <h2
      class="uppercase text-[#000] text-[2rem] font-bold leading-[2.5rem] tracking-[0.07144rem]"
    >
      you may also like
    </h2>
    <div class="flex justify-center items-center gap-[1.88rem] text-center">
      <div class="flex flex-col gap-8 justify-center items-center">
        <img
          src="/images/shared/desktop/image-xx99-mark-one-headphones.jpg"
          alt=""
          class="w-[21.875rem] h-[19.875rem] bg-[#F1F1F1] rounded-lg"
        />
        <h2
          class="tracking-[0.10713rem] text-[#000]
          text-[1.5rem]
          font-bold
          leading-normal"
        >
          XX99 MARK I
        </h2>
        <a
          href="/product-xx99-mark-one-headphones"
          target="_self"
          class="w-40 h-12 bg-[#D87D4A] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase flex justify-center items-center mt-6 hover:bg-[#FBAF85] transition-all ease-in-out duration-500 text-[#fff]"
          >See Product</a
        >
      </div>
      <div class="flex flex-col gap-8 justify-center items-center">
        <img
          src="/images/shared/desktop/image-xx59-headphones.jpg"
          alt=""
          class="w-[21.875rem] h-[19.875rem] bg-[#F1F1F1] rounded-lg"
        />
        <h2
          class="tracking-[0.10713rem] text-[#000] text-[1.5rem] font-bold leading-normal uppercase"
        >
          XX59
        </h2>
        <a
          href="/product-xx59-headphones"
          target="_self"
          class="w-40 h-12 bg-[#D87D4A] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase flex justify-center items-center mt-6 hover:bg-[#FBAF85] transition-all ease-in-out duration-500 text-[#fff]"
          >See Product</a
        >
      </div>
      <div class="flex flex-col gap-8 justify-center items-center">
        <img
          src="/images/shared/desktop/image-zx9-speaker.jpg"
          alt=""
          class="w-[21.875rem] h-[19.875rem] bg-[#F1F1F1] rounded-lg"
        />
        <h2
          class="tracking-[0.10713rem] text-[#000] text-[1.5rem] font-bold leading-normal uppercase"
        >
          ZX9 SPEAKER
        </h2>
        <a
          href="/product-zx9-speaker"
          target="_self"
          class="w-40 h-12 bg-[#D87D4A] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase flex justify-center items-center mt-6 hover:bg-[#FBAF85] transition-all ease-in-out duration-500 text-[#fff]"
          >See Product</a
        >
      </div>
    </div>
  </section>
  <!-- Category -->
  <Category />
  <!--  Best Audio Gear -->
  <BestAudioGear />
</Layout>
<!-- Footer -->
<Footer />

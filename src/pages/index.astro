---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
import Category from "../components/Category.astro";
import BestAudioGear from "../components/BestAudioGear.astro";
---

<Layout title="Frontend Mentor | Audiophile e-commerce website">
  <!-- Header -->
  <Header />
  <main class="">
    <!-- New Propuct XX99 Mark II HeadphoneS -->
    <section
      class="flex flex-col items-center justify-center gap-6 bg-hero-img-sm bg-cover bg-bottom bg-no-repeat px-6 py-[6.81rem] text-center text-[#fff] md:bg-hero-img-md md:px-[2.44rem] md:py-[9.64rem] lg:items-start lg:justify-start lg:bg-hero-img lg:bg-left-bottom lg:px-[10.31rem] lg:pb-[11.78rem] lg:pt-[8.06rem] lg:text-left"
    >
      <h1
        class="text-sm font-normal uppercase leading-normal tracking-[0.625rem] opacity-[0.4964]"
      >
        NEW PRODUCT
      </h1>
      <h2
        class="text-[2.25rem] font-bold uppercase leading-[2.5rem] tracking-[0.08038rem] md:text-[3.5rem] md:leading-[3.625rem] md:tracking-[0.125rem] md:max-xl:w-[24.75rem]"
      >
        XX99 Mark II HeadphoneS
      </h2>
      <p
        class="text-[0.9375rem] font-normal leading-[1.5625rem] opacity-75 md:max-xl:w-[21.8125rem]"
      >
        Experience natural, lifelike audio and exceptional build quality made
        for the passionate music enthusiast.
      </p>
      <a
        href="/product-xx99-mark-two-headphones"
        class="mt-2 flex h-12 w-40 items-center justify-center bg-[#D87D4A] text-sm font-bold uppercase leading-normal tracking-[0.0625rem] transition-all duration-500 ease-in-out hover:bg-[#FBAF85]"
        >See Product</a
      >
    </section>
    <!-- Categor -->
    <Category />
    <!-- ZX9 SPEAKER -->
    <section
      class="mx-6 mb-4 mt-[7.37rem] flex h-[37.5rem] flex-col items-center justify-center gap-8 rounded-lg bg-[#D87D4A] px-[1.44rem] pb-[3.44rem] pt-[3.56rem] text-center text-[#fff] md:mx-10 md:mb-8 md:mt-24 md:h-[45rem] md:px-[10.56rem] md:pb-16 md:pt-[3.25rem] lg:mx-[10.31rem] lg:mb-12 lg:mt-[10.5rem] lg:h-[35rem] lg:flex-row lg:justify-between lg:pl-[7.34rem] lg:pr-[5.94rem] lg:pt-[6rem] lg:text-left"
    >
      <picture>
        <source
          media="(min-width:1024px) "
          srcset="/public/images/home/desktop/image-speaker-zx9.png"
        />
        <source
          media="(min-width:768px)"
          srcset="/public/images/home/tablet/image-speaker-zx9.png"
        />
        <img
          src="/public/images/home/mobile/image-speaker-zx9.png"
          alt=""
          class="w-40 bg-contain bg-no-repeat md:w-[12rem] lg:w-[25rem]"
        />
      </picture>
      <div
        class="flex flex-col items-center justify-center gap-6 text-center text-[#fff]"
      >
        <h2
          class="w-[12rem] text-[2.25rem] font-bold uppercase leading-[2.5rem] tracking-[0.08038rem]"
        >
          ZX9 SPEAKER
        </h2>
        <p class="text-[0.9375rem] font-normal leading-[1.5625rem] opacity-75">
          Upgrade to premium speakers that are phenomenally built to deliver
          truly remarkable sound.
        </p>
        <a
          href="/product-zx9-speaker"
          class="h-12 w-40 bg-[#000] text-sm font-bold uppercase tracking-[0.0625rem] text-[#fff]"
        ></a>
      </div>
    </section>
    <!-- ZX7 SPEAKER -->
    <section class=""></section>
    <!-- YX1 EARPHONES -->
    <section class=""></section>
    <!-- Best Audio Gear -->
    <BestAudioGear />
  </main>
  <!-- Footer -->
  <Footer />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
import Category from "../components/Category.astro";
import BestAudioGear from "../components/BestAudioGear.astro";
---

<Layout title="Frontend Mentor | Audiophile e-commerce website">
  <!-- Header -->
  <Header />
  <main>
    <!-- Website Home Detailes -->
    <section
      class="home-details text-[#fff] pl-[10.31rem] pt-24 pb-[9.59rem] flex flex-col gap-4"
    >
      <h1 class="text-sm font-normal leading-normal tracking-[0.625rem]">
        NEW PRODUCT
      </h1>
      <h2
        class="w-[24.75rem] text-[3.5rem] font-bold leading-[3.625rem] tracking-[0.125rem] uppercase mt-2"
      >
        XX99 Mark II Headphones
      </h2>
      <p
        class="w-[21.8125rem] opacity-75 text-[0.9375rem] leading-[1.5625rem] font-normal"
      >
        Experience natural, lifelike audio and exceptional build quality made
        for the passionate music enthusiast.
      </p>
      <a
        href="/product-xx99-mark-two-headphones"
        target="_self"
        class="w-40 h-12 bg-[#D87D4A] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase flex justify-center items-center mt-6
         hover:bg-[#FBAF85] transition ease-in-out duration-500"
        >See Product</a
      >
    </section>
    <!-- Shop Other Product -->
    <Category />
    <!-- ZX9 SPEAKER -->
    <section
      class="w-[69.375rem] h-[35rem] mt-[10.5rem] bg-[#D87D4A] rounded-lg mx-[10.31rem] mb-12 relative overflow-hidden flex justify-between items-center"
    >
      <!-- Product Image & Pattern -->
      <div class="">
        <img
          src="/images/home/desktop/pattern-circles.svg"
          alt=""
          class="absolute top-[-5rem] left-[-8rem] bg-contain"
        />
        <img
          src="/images/home/desktop/image-speaker-zx9.png"
          alt=""
          class="w-[25.63963rem] h-[30.8125rem] absolute bottom-[-1rem] left-[8rem]"
        />
      </div>
      <!-- Product Detailes -->
      <div class="flex flex-col gap-6 pr-24">
        <h2
          class="w-[16.321rem] text-[3.5rem] font-bold text-[#fff] leading-[3.625rem] tracking-[0.125rem] uppercase"
        >
          ZX9 SPEAKER
        </h2>
        <p
          class="w-[21.8125rem] text-[#fff] text-[0.9375rem] font-normal leading-[1.5625rem] opacity-75"
        >
          Upgrade to premium speakers that are phenomenally built to deliver
          truly remarkable sound.
        </p>
        <a
          href="/product-zx9-speaker"
          class="bg-[#000] w-40 h-12 text-[#fff] text-sm font-bold tracking-[0.0625rem] uppercase mt-6 hover:bg-[#4C4C4C] transition ease-in-out duration-500 flex justify-center items-center cursor-pointer"
          >See Product</a
        >
      </div>
    </section>
    <!-- ZX7 SPEAKER -->
    <section
      class="bg-ZX7-SPEAKER rounded-lg mx-[10.31rem] w-[69.375rem] h-[20rem] flex flex-col justify-center gap-8 pl-[7.88rem] mb-12"
    >
      <!-- Product Image & Pattern -->
      <h2
        class="text-[#000] text-[1.75rem] leading-normal tracking-[0.125rem] font-bold uppercase"
      >
        ZX7 SPEAKER
      </h2>
      <a
        href="/product-zx7-speaker"
        class="bg-transparent w-40 h-12 text-[#000] text-sm font-bold
           tracking-[0.0625rem] uppercase mt-6 border border-solid border-[#000] leading-normal flex justify-center items-center cursor-pointer hover:bg-[#000] hover:text-[#fff] transition ease-in-out duration-500"
        >See Product</a
      >
    </section>
    <!-- YX1 EARPHONES -->
    <section class="flex justify-between items-center mx-[10.31rem] mb-12">
      <div class="">
        <img
          src="/images/home/desktop/image-earphones-yx1.jpg"
          alt=""
          class="rounded-lg w-[33.75rem] h-[20rem]"
        />
      </div>
      <div
        class="w-[33.75rem] h-[20rem] bg-[#F1F1F1] rounded-lg flex flex-col justify-center gap-8 pl-[5.49rem]"
      >
        <h2
          class="text-[#000] text-[1.75rem] font-bold leading-normal tracking-[0.125rem] uppercase"
        >
          YX1 EARPHONES
        </h2>
        <a
          href="/product-earphones"
          class="bg-transparent w-40 h-12 text-[#000] text-sm font-bold
           tracking-[0.0625rem] uppercase mt-6 border border-solid border-[#000] leading-normal flex justify-center items-center cursor-pointer hover:bg-[#000] hover:text-[#fff] transition ease-in-out duration-500"
          >See Product</a
        >
      </div>
    </section>
    <!--  Best Audio Gear -->
    <BestAudioGear />
  </main>
  <!-- Footer -->
  <Footer />
</Layout>
